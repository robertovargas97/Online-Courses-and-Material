# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ts,tsx,js,jsx}]
indent_size = 2
quote_type = single

[*.json]
indent_size = 2

[*.html]
indent_size = 2

[*.{css,scss,sass}]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[{Makefile,*.mk}]
indent_style = tab
